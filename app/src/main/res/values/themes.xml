<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Base.Theme.FarmShields" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">?attr/colorSecondary</item>

        <!-- Background color -->
        <item name="android:windowBackground">@color/colorSecondary</item>
        <item name="customBackgroundColor">@color/colorPrimaryVariant</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>

        <!-- Input field colors -->
        <item name="colorControlNormal">@color/colorSecondary</item>
        <item name="colorControlActivated">@color/colorSecondaryVariant</item>
        <item name="colorControlHighlight">@color/green</item>

        <!-- Window -->
<!--        <item name="android:windowFullscreen">true</item>-->
<!--        <item name="android:windowTranslucentStatus">true</item>-->
<!--        <item name="android:windowTranslucentNavigation">false</item>-->
        <!-- Disable dark theme support -->
<!--        <item name="android:forceDarkAllowed">false</item>-->

        <!-- Customize other attributes as needed -->
    </style>

    <style name="Theme.FarmShields" parent="Base.Theme.FarmShields">
        <!-- Force light theme -->
<!--        <item name="android:nightMode">notnight</item>-->
    </style>

    <!-- Report theme style -->
    <style name="Theme.Report" parent="Base.Theme.FarmShields">
        <item name="colorControlActivated">@color/colorSecondary</item>

    </style>

    <!-- CardView style -->
<!--    <style name="FarmShields.CardView" parent="Widget.MaterialComponents.CardView">-->
<!--        <item name="cardCornerRadius">8dp</item>-->
<!--        <item name="cardElevation">4dp</item>-->
<!--        <item name="cardBackgroundColor">@color/colorSecondary</item>-->
<!--    </style>-->

    <!-- SplashScreen theme -->
    <style name="Theme.SplashScreen" parent="Base.Theme.FarmShields">
        <item name="android:windowBackground">@color/green</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- BottomNavigationView styles -->
    <style name="Widget.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@drawable/bottom_nav_item_background</item>
        <item name="itemTextColor">@drawable/bottom_nav_item_background</item>
        <item name="backgroundColor">@color/white</item>
    </style>
</resources>
